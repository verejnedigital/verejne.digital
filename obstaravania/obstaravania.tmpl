{% macro scoreToColor(score, style) %}
  {% if score > 0.6 %}
    <td style={{style}}>
  {% elif score >  0.45 %}
    <td style={{style}}>
  {% else %}
    <td style={{style}}>
  {% endif %}  
{% endmacro %}

{% macro scoreToStars(score) %}
  {% if score > 0.6 %}
    <span class="obstaravania-stars"> &#9733;&#9733;&#9733; </span>
  {% elif score >  0.45 %}
    <span class="obstaravania-stars"> &#9733;&#9733; </span>
  {% else %}
    <span class="obstaravania-stars"> &#9733; </span>
  {% endif %}  
{% endmacro %}

